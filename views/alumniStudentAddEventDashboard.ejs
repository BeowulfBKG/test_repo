<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UConnect Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        body,
        h1,
        ul,
        li {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            list-style: none;
        }

        .dashboard {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: black;
            color: white;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            /* Set minimum height to cover the entire viewport height */
        }

        .logo {
            padding: 20px;
            text-align: center;
        }

        .logo img {
            max-width: 100%;
            height: auto;
            width: 150px;
        }

        .menu,
        .user-account {
            padding: 20px;
        }

        .menu ul,
        .user-account ul {
            padding: 0;
        }

        .menu ul li a,
        .user-account ul li a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 10px 0;
        }

        .menu ul li i,
        .user-account ul li i {
            width: 24px;
            height: 24px;
            font-size: 24px;
            margin-right: 10px;
        }

        .user-account {
            margin-top: auto;
        }

        .content {
            flex-grow: 1;
            background-color: #ECF0F1;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            background-color: white;
        }

        .header h1 {
            margin-right: 20px;
        }

        .header input[type="search"]:focus {
            outline: none;
            border-color: #265CFF;
        }

        #cancelAddEvent-button {
            display: inline-flex;
            align-items: center;
            padding: 10px;
            margin: 10px 0;
            border: 1.5px solid red;
            border-radius: 5px;
            background-color: red;
            color: white;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
        }

        #cancelAddEvent-button i {
            margin-left: 5px;
        }

        #cancelAddEvent-button:hover {
            background-color: transparent;
            color: red;
            border: 1.5px solid red;
        }

        .addEvents-container {
            padding: 20px;
            background-color: #f4f4f4;
            border-radius: 5px;
            margin-right: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            font-size: 12px;
        }

        input[type="text"],
        input[type="date"],
        input[type="time"],
        select,
        textarea {
            padding: 10px;
            margin-bottom: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: white;
            color: #265CFF;
            width: 100%;
        }

        input[type="text"],
        input[type="date"],
        input[type="time"],
        select,
        textarea:focus {
            outline: none;
            border-color: #265CFF;
        }



        button[type="submit"] {
            background-color: #265CFF;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
        }

        .row {
            display: flex;
            justify-content: space-between;
        }

        .row>div {
            flex: 1;
            margin-right: 10px;
        }

        .row>div:first-child {
            margin-right: 10px;
        }

        .row>div:last-child {
            margin-right: 0;
        }

        #category {
            width: 100%;
        }

        .row>div:nth-child(2) {
            margin-right: 20px;
        }
    </style>

</head>

<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo_original.png" alt="UConnect Logo">
            </div>
            <nav class="menu">
                <ul>
                    <li><a href="/alumni-student/all-events"><i class="far fa-folder"></i>All Events</a></li>
                    <li><a href="/alumni-student/my-events"><i class="far fa-folder-open"></i>My Events</a></li>
                </ul>
            </nav>
            <div class="user-account">
                <ul>
                    <li><a href="/alumni-student/edit-account"><i class="fas fa-cog"></i>Edit Account</a></li>
                    <li><a href="#"><i class="fas fa-sign-out-alt"></i>Log Out</a></li>
                </ul>
            </div>
        </aside>
        <main class="content">
            <header class="header">
                <h1>Add New Event</h1>
                <a href="/alumni-student/all-events" id="cancelAddEvent-button" class="button">Cancel</a>
            </header>
            <section class="addEvents-container">
                <form action="/alumni-student/add-event" method="POST" onsubmit="">
                    <!-- Title -->
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" required>
                    </div>

                    <!-- Date -->
                    <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" id="date" name="date" required>
                    </div>

                    <!-- Start Time -->
                    <div class="form-group">
                        <label for="startTime">Start Time:</label>
                        <input type="time" id="startTime" name="startTime" required>
                    </div>

                    <!-- End Time -->
                    <div class="form-group">
                        <label for="endTime">End Time:</label>
                        <input type="time" id="endTime" name="endTime" required>
                    </div>

                    <!-- Location -->
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" id="location" name="location" required>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" required></textarea>
                    </div>

                    <!-- Event Category -->
                    <div class="form-group">
                        <label for="eventCategory">Event Category:</label>
                        <select id="eventCategory" name="eventCategory" required>
                            <option value="Professional Development">Professional Development</option>
                            <option value="Networking">Networking</option>
                            <option value="Campus Events">Campus Events</option>
                        </select>
                    </div>


                    <!-- Organizer Dropdown -->
                    <div class="form-group">
                        <label for="organizer">Organizer:</label>
                        <select id="organizer" name="organizer">
                            <% alumniStudents.forEach(student=> { %>
                                <option value="<%= student._id %>">
                                    <%= student.firstName %>
                                        <%= student.lastName %> - <%= student.emailAddress %>
                                </option>
                                <% }); %>
                        </select>
                    </div>


                    <!-- Alumni Student Guests Dropdown -->
                    <div class="form-group">
                        <label for="alumniStudentGuests">Alumni Student Guests:</label>
                        <select multiple id="alumniStudentGuests" name="alumniStudentGuests[]">
                            <% alumniStudents.forEach(student=> { %>
                                <option value="<%= student._id %>">
                                    <%= `${student.firstName} ${student.lastName} - ${student.emailAddress}` %>
                                </option>
                                <% }); %>
                        </select>
                    </div>


                    <!-- Alumni Manager Guests Dropdown -->
                    <div class="form-group">
                        <label for="alumniManagerGuests">Alumni Manager Guests:</label>
                        <select multiple id="alumniManagerGuests" name="alumniManagerGuests[]">
                            <% alumniManagers.forEach(manager=> { %>
                                <option value="<%= manager._id %>">
                                    <%= `${manager.firstName} ${manager.lastName} - ${manager.emailAddress}` %>
                                </option>
                                <% }); %>
                        </select>
                    </div>


                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit">Complete</button>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <script>
        
    </script>
</body>

</html>